<% layout("/layouts/boilerplate") %>

<% if (!currentUser) { %>
    <div class="row justify-content-center mt-1">
        <div class="col-10 col-lg-8">
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <div class="d-flex align-items-center justify-content-between">
                    <span class="mb-0">Please log in to leave a review.</span>
                    <form action="/login" method="GET" class="mb-0">
                        <button type="submit" class="btn btn-warning btn-sm">Log In</button>
                    </form>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
<% } %>
    <div class="row">
        <div class="col-8 offset-2 mt-0 mb-3">
            <h3 class="offset-2"><%= listing.title %></h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card mt-0">

            <img src="<%= (listing.image && listing.image.url) ? listing.image.url : 'https://images.unsplash.com/photo-1473116763249-2faaef81ccda?q=80&w=1196&auto=format&fit=crop&ixlib=rb-4.1.0' %>" class="card-img-top show-img " alt="listing_image">
            <div class="card-body">
                <p class="card-text offset-1 mb-2"><strong>Owned by <i><%= (listing.owner && listing.owner.username) ? listing.owner.username : 'Unknown owner' %></i></strong></p>
                <p class="card-text mb-2"><%= listing.description %></p>
                <p class="card-text mb-2">$<%= (typeof listing.price === 'number' ? listing.price.toLocaleString("en-IN") : 'N/A') %></p>
                <p class="card-text mb-1"><%= listing.location %></p>
                <p class="card-text mb-0"><%= listing.country %></p>
            </div>
        </div>
    </div>

<div class="btns">
    <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>



    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
    </form>
</div>


<% if (currentUser) { %>
    <hr>
    <div class="col-6 offset-3 mb-3">
        <div class="card p-3 review-form-card">
            <h4 class="mb-3">Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation">
                <!-- Star rating (radio inputs) - submit as review[rating] -->
                <fieldset class="starability-slot mb-3">
                    <legend class="visually-hidden">Rating</legend>
                    <!-- removed default no-rate (value 0) so server validation requiring 1-5 will succeed when user selects a rating -->
                    <input type="radio" id="rate1" name="review[rating]" value="1" required />
                    <label for="rate1" title="Terrible">1 star</label>
                    <input type="radio" id="rate2" name="review[rating]" value="2" />
                    <label for="rate2" title="Not good">2 stars</label>
                    <input type="radio" id="rate3" name="review[rating]" value="3" />
                    <label for="rate3" title="Average">3 stars</label>
                    <input type="radio" id="rate4" name="review[rating]" value="4" />
                    <label for="rate4" title="Very good">4 stars</label>
                    <input type="radio" id="rate5" name="review[rating]" value="5" />
                    <label for="rate5" title="Amazing">5 stars</label>
                </fieldset>

                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" cols="20" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please provide a valid comment.</div>
                </div>

                <button type="submit" class="btn btn-outline-dark">Submit Review</button>
            </form>
        </div>
    </div>
<% } %>

<hr>

<% if (listing.reviews && listing.reviews.length) { %>
    <div class="col-8 offset-3 reviews-summary">
        <div class="review-stars" role="img" aria-label="Average Rating: <%= (typeof listing.averageRating === 'number' && isFinite(listing.averageRating)) ? listing.averageRating.toFixed(1) : '0.0' %> out of 5">
            <!-- Visual stars removed; aria-label preserved for screen readers -->
        </div>
    </div>
<% } %>

<div class="col-8 offset-3 reviews-section">
    <% if (listing.reviews && listing.reviews.length) { %>
    <h4 class="mb-3">All Reviews</h4>

        <div class="row g-3">
            <% listing.reviews.forEach(function(review) { %>
                <div class="col-md-6 col-sm-12">
                    <div class="card h-100 review-card">
                        <div class="card-body">
                            <div class="review-header">
                                <% const reviewerName = (review.author && review.author.username) ? review.author.username : 'Anonymous'; %>
                                <% const initial = reviewerName.charAt(0); %>
                                <span class="review-avatar" title="<%= reviewerName %>"><%= initial %></span>
                                <h5 class="card-title"><%= reviewerName %></h5>
                            </div>
                            <p class="card-text"><%= review.comment %></p>
                            <div class="review-stars" role="img" aria-label="Rating: <%= review.rating %> out of 5">
                                <% for (var i = 1; i <= 5; i++) { %>
                                    <% if (i <= (review.rating || 0)) { %>
                                        <i class="fa-solid fa-star"></i>
                                    <% } else { %>
                                        <i class="fa-regular fa-star"></i>
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                        <% if (currentUser && review.author && String(currentUser._id) === String(review.author._id)) { %>
                        <div class="card-footer bg-white border-0">
                            <form class="mb-0" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                        </div>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>

<% 
        const mapLocationParts = [];
        if (listing.location) { mapLocationParts.push(listing.location); }
        if (listing.country) { mapLocationParts.push(listing.country); }
        const mapQuery = encodeURIComponent(mapLocationParts.join(", ") || "San Francisco, CA");
%>
<h4 class="mb-3 offset-3">Where You'll be</h4>
<div class="map-container">
    <iframe
        src="https://maps.google.com/maps?q=<%= mapQuery %>&amp;t=&amp;z=13&amp;ie=UTF8&amp;iwloc=&amp;output=embed"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
</div>




<div id="chatbot-root" class="chatbot-root" aria-live="polite">
    <button type="button" class="chatbot-toggle" data-chatbot-toggle aria-expanded="false" aria-controls="chatbot-panel">
        <i class="fa-solid fa-robot" aria-hidden="true"></i>
        <span>Ask about this stay</span>
    </button>
    <section id="chatbot-panel" class="chatbot-panel" data-chatbot-panel role="dialog" aria-modal="false" aria-labelledby="chatbot-title" aria-hidden="true">
        <header class="chatbot-header">
            <h2 id="chatbot-title">Stay Assistant</h2>
            <button type="button" class="chatbot-close" data-chatbot-close aria-label="Close assistant">
                <i class="fa-solid fa-xmark" aria-hidden="true"></i>
            </button>
        </header>
        <div class="chatbot-messages" data-chatbot-messages role="log" aria-live="polite" aria-relevant="additions"></div>
        <form class="chatbot-form" data-chatbot-form autocomplete="off">
            <label for="chatbot-input" class="visually-hidden">Ask a question about this listing</label>
            <input id="chatbot-input" type="text" name="message" class="chatbot-input" data-chatbot-input placeholder="Ask a question..." autocomplete="off">
            <button type="submit" class="chatbot-send">Send</button>
        </form>
    </section>
</div>

<script id="listing-chatbot-data" type="application/json">
    <%- JSON.stringify({
        title: listing.title,
        price: (typeof listing.price === 'number') ? listing.price : null,
        location: listing.location,
        owner: (listing.owner && listing.owner.username) ? listing.owner.username : null
    }) %>
</script>

<script src="/js/script.js"></script>
